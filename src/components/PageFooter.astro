---
/**
 * Page Footer Component
 * 
 * Displays a fixed footer bar with a friendly message and quick access to external social media
 * and professional profile links (GitHub, Codeberg, LinkedIn, Resume, Email). Provides consistent 
 * branding and navigation across all pages of the site.
 * 
 * Props:
 * - showScrollUp: Boolean to conditionally display scroll-to-top button (for About page)
 */

interface Props {
    showScrollUp?: boolean;
}

const { showScrollUp = false } = Astro.props;
---

<!-- 
  Page Footer Component
  
  Displays a fixed footer bar with a friendly message and quick access to external social media
  and professional profile links (GitHub, Codeberg, LinkedIn, Resume, Email). Provides consistent 
  branding and navigation across all pages of the site.
-->
<div
    id="footer"
    class="relative z-20 mt-28 flex items-center justify-between p-5"
>
    <!-- Left side: Friendly thank you message with heart icon -->
    <div class="flex items-center">
        <i class="fa-solid fa-hand-holding-heart"></i>
        <p class="ml-5 font-code font-extralight text-sm md:text-xs">
            Thanks for swinging by!
        </p>
    </div>
    
    <!-- Right side: Social media and professional profile links -->
    <div class="flex space-x-2">
        <!-- 
          GitHub Profile Link
          Opens the user's GitHub profile in a new tab for viewing repositories and contributions.
        -->
        <a
            href="https://github.com/djprofessorkash"
            target="_blank"
            rel="noopener noreferrer"
            id="btnGitHub"
            class="footer-btn-github"
            aria-label="GitHub"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
            >
                <path
                    d="M12 0C5.37 0 0 5.37 0 12c0 5.3 3.438 9.799 8.205 11.385.6.111.82-.26.82-.578 0-.285-.011-1.042-.017-2.046-3.338.726-4.042-1.61-4.042-1.61-.546-1.387-1.332-1.756-1.332-1.756-1.089-.745.082-.729.082-.729 1.205.085 1.839 1.236 1.839 1.236 1.07 1.834 2.805 1.304 3.492.997.108-.775.418-1.304.76-1.604-2.665-.305-5.467-1.332-5.467-5.932 0-1.31.469-2.381 1.236-3.221-.124-.304-.535-1.528.117-3.184 0 0 1.008-.322 3.3 1.23.96-.266 1.989-.399 3.011-.404 1.022.005 2.051.138 3.012.404 2.29-1.552 3.297-1.23 3.297-1.23.654 1.656.243 2.88.119 3.184.77.84 1.236 1.911 1.236 3.221 0 4.61-2.807 5.624-5.478 5.922.43.37.814 1.096.814 2.21 0 1.596-.015 2.884-.015 3.274 0 .32.217.694.825.577C20.565 21.794 24 17.297 24 12c0-6.63-5.37-12-12-12z"
                ></path>
            </svg>
        </a>

        <!-- 
          Codeberg Profile Link
          Opens the user's Codeberg profile for viewing open source projects and contributions.
        -->
        <a
            href="https://codeberg.org/djprofessorkash"
            target="_blank"
            rel="noopener noreferrer"
            id="btnCodeberg"
            class="footer-btn-codeberg"
            aria-label="Codeberg"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
            >
                <path
                    d="M11.955.49A12 12 0 0 0 0 12.49a12 12 0 0 0 1.832 6.373L11.838 5.928a.187.14 0 0 1 .324 0l10.006 12.935A12 12 0 0 0 24 12.49a12 12 0 0 0-12-12 12 12 0 0 0-.045 0zm.375 6.467l4.416 16.553a12 12 0 0 0 5.137-4.213z"
                ></path>
            </svg>
        </a>

        <!-- 
          LinkedIn Profile Link
          Opens the user's LinkedIn profile for viewing professional experience and connections.
        -->
        <a
            href="https://linkedin.com/in/aakashsudhakar"
            target="_blank"
            rel="noopener noreferrer"
            id="btnLinkedIn"
            class="footer-btn-linkedin"
            aria-label="LinkedIn"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
            >
                <path
                    d="M22.23 0H1.77C.79 0 0 .77 0 1.72v20.56C0 23.23.79 24 1.77 24h20.46c.98 0 1.77-.77 1.77-1.72V1.72C24 .77 23.21 0 22.23 0zM7.12 20.45H3.56V9.03h3.56v11.42zM5.34 7.54a2.07 2.07 0 01-2.1-2.1c0-1.18.94-2.12 2.1-2.12s2.1.94 2.1 2.12c0 1.16-.94 2.1-2.1 2.1zM20.45 20.45h-3.56v-5.48c0-1.31-.47-2.2-1.65-2.2-.9 0-1.43.61-1.67 1.2-.09.22-.12.52-.12.83v5.65h-3.56s.05-9.17 0-10.12h3.56v1.43c.47-.73 1.31-1.77 3.18-1.77 2.32 0 4.06 1.51 4.06 4.76v5.71z"
                ></path>
            </svg>
        </a>

        <!-- 
          Resume Document Link
          Placeholder for resume link (to be populated later). Displays resume icon.
        -->
        <span
            id="btnResume"
            class="footer-btn-resume cursor-pointer"
            aria-label="Resume"
        >
            <svg
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    d="M9 7V2.221a2 2 0 0 0-.5.365L4.586 6.5a2 2 0 0 0-.365.5H9Z"
                ></path>
                <path
                    fill-rule="evenodd"
                    d="M11 7V2h7a2 2 0 0 1 2 2v16a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V9h5a2 2 0 0 0 2-2Zm4.707 5.707a1 1 0 0 0-1.414-1.414L11 14.586l-1.293-1.293a1 1 0 0 0-1.414 1.414l2 2a1 1 0 0 0 1.414 0l4-4Z"
                    clip-rule="evenodd"></path>
            </svg>
        </span>

        <!-- 
          Email Contact Link
          Opens the user's default email client with a pre-filled "to" address.
        -->
        <a
            href="mailto:kash.sudhakar@pm.me"
            id="btnEmail"
            class="footer-btn-email"
            aria-label="Email"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
            >
                <path
                    d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z"
                ></path>
                <path
                    d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z"
                ></path>
            </svg>
        </a>
    </div>
    
    <!-- Scroll-up button (visible only on About page) -->
    {showScrollUp && (
        <button 
            id="scroll-to-top-btn" 
            class="absolute -top-20 left-1/2 transform -translate-x-1/2 z-30 cursor-pointer transition-all duration-500 hover:scale-110 bg-pearl/10 p-3 rounded-full backdrop-blur-sm"
            style="opacity: 0; pointer-events: none;"
            aria-label="Scroll to top"
        >
            <svg class="w-10 h-10 text-pearl" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="transform: rotate(180deg);">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
        </button>
    )}
</div>
